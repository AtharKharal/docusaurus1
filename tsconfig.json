{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src", "docusaurus.config.ts", "sidebars.ts"]
}
